@model Category1
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:40px; margin-left:40px; margin-right:40px">

    <form asp-action="EditCategory" method="post">
        <div class="form-group">
            <label>Kategori ID</label>
            <input type="text" asp-for="Id" class="form-control" />
        </div>
        <div class="form-group">
            <label>Kategori Adı</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <button type="submit" class="btn btn-outline-info">Güncelle</button>
    </form>

</div>
